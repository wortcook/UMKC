# ===== Spark Configuration =====
SPARK_MASTER=spark://spark-master:7077
# Optimized for stability with large datasets (5GB+)
# Smaller executors prevent OOM, but slower processing
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=2g
SPARK_EXECUTOR_CORES=2
SPARK_WORKER_MEMORY=4g
SPARK_WORKER_CORES=2
SPARK_SQL_SHUFFLE_PARTITIONS=200

# ===== Paths (Container Paths) =====
DATA_DIR=/data
RESULTS_DIR=/results
CACHE_DIR=/cache
LOGS_DIR=/logs

# ===== Data Processing =====
SHARD_SIZE=100000
K_MER_DEFAULT=6
COMPRESSION=snappy

# ===== HuggingFace =====
HF_REPO=arcinstitute/opengenome2
HF_CACHE_DIR=/cache/huggingface
# HF_TOKEN=  # Uncomment and add token for private repos

# ===== Performance =====
ENABLE_ADAPTIVE_EXECUTION=true
ENABLE_DYNAMIC_ALLOCATION=false
CACHE_STRATEGY=memory_and_disk_ser

# ===== Logging =====
LOG_LEVEL=INFO
LOG_FORMAT=text
SPARK_LOG_LEVEL=WARN

# ===== Development =====
DEBUG=false
SAMPLE_MODE=false
SAMPLE_SIZE=5000
